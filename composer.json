{
    "name": "ktr/laravel-lightsearch-driver",
    "description": "A Laravel Scout driver for LightSearch using a shared database index",
    "type": "library",
    "license": "MIT",
    "authors": [{ "name": "Ktr", "email": "ktr@ktr.fo" }],
    "require": {
        "php": ">=8.2",
        "laravel/scout": "^9.0 || ^10.0",
        "illuminate/support": "^9.0 || ^10.0",
        "illuminate/database": "^9.0 || ^10.0"
    },
    "autoload": {
        "psr-4": { "Ktr\\LightSearch\\": "src/" }
    },
    "extra": {
        "laravel": { "providers": ["Ktr\\LightSearch\\LightSearchServiceProvider"] }
    },
    "keywords": [
        "laravel",
        "scout",
        "lightsearch",
        "search"
    ],
    "support": {
        "issues": "https://github.com/ktrfo/laravel-lightsearch/issues"
    }
}
